<!DOCTYPE html>
<html>

<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="style.css" />
</head>

<body>
  <div class="container">
    <h1 class="text-center mt-5">Dashboard</h1>
    <div class="row mt-5">
      <div class="col-md-6 offset-md-3">
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex justify-content-center">
              <img src="<%= image %>" alt="<%= user.imageAlt || 'N/A' %>" class="rounded-circle img-thumbnail user-image" />
            </div>
            <h5 class="card-title">User Information</h5>
            <p class="card-text">
              ID: <span id="userId">
                <%= user.id %>
              </span>
            </p>
            <p class="card-text">
              Identifier:
              <span id="userIdentifier">
                <%= user.identifier %>
              </span>
            </p>
            <p class="card-text">
              Name:
              <span id="userName">
                <%= user.name || `user#${user.id}` %>
              </span>
            </p>
          </div>
        </div>
        <button class="btn btn-danger" onclick="logout()">Logout</button>
        <button class="btn btn-primary ms-3" onclick="redirectToTracks()">
          Go to Tracks
        </button>
        <div class="card-container mt-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Playlists</h5>

              <!-- playlist cards here -->
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function logout() {
      alert("Logged out!");
      window.location.href = "/logout";
    }

    function redirectToTracks() {
      window.location.href = "/tracks";
    }
  </script>
</body>

</html>